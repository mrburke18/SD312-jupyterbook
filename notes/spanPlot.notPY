#!/usr/bin/env python3

import numpy as np
import matplotlib.pyplot as plt
from mpl_toolkits.mplot3d import Axes3D

N=50

A=np.array([[.2, .5],[-.2,.8],[.9,-.4]])
#A=np.array([[.2, .5, .1],[-.2,.8,-1.4],[.9,-.4,3.1]]) #3a-1b
(n,k)=A.shape
points = np.zeros((3,N))
for i in range(N):
  w=np.random.randn(k)
  pt=A@w
  points[:,i]=A@w

fig = plt.figure()
ax = fig.add_subplot(111, projection='3d')
ax.scatter(points[0,:],points[1,:],points[2,:])
plt.show()
